@model ArtInk.Site.ViewModels.Request.FacturaRequestDto

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="card mx-auto disable-hover" style="max-width: 800px;">
        <div class="card-header bg-primary text-white">
            <h4>Formulario de Factura</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-sm-6 col-md-6 mb-4">
                        <label asp-for="IdCliente" class="form-label"></label>
                        <select asp-for="IdCliente" class="form-select nombre-cliente"
                                asp-items='@(new SelectList(Model.Clientes, "Id", "Nombre" ))'></select>
                        <span asp-validation-for="IdCliente" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6 col-md-6 mb-4">
                        <label asp-for="NombreCliente" class="form-label"></label>
                        <input asp-for="NombreCliente" id="NombreCliente" class="form-control">
                        <span asp-validation-for="NombreCliente" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12 col-md-6 mb-4">
                        <label asp-for="Fecha" class="form-label"></label>
                        <input asp-for="Fecha" id="Fecha" class="form-control"
                            placeholder="Selecciona una fecha">
                        <span asp-validation-for="Fecha" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="IdTipoPago" class="form-label"></label>
                            <select asp-for="IdTipoPago" class="form-select"
                                    asp-items="@(new SelectList(Model.TipoPagos," Id","Nombre"))"></select>
                            <span asp-validation-for="IdTipoPago" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="IdImpuesto" class="form-label"></label>
                            <select asp-for="IdImpuesto" class="form-select"
                                    asp-items="@(new SelectList(Model.Impuestos," Id","Nombre"))"></select>
                            <span asp-validation-for="IdImpuesto" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="MontoImpuesto" class="form-label"></label>
                            <input asp-for="MontoImpuesto" class="form-control" />
                            <span asp-validation-for="MontoImpuesto" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="PorcentajeImpuesto" class="form-label"></label>
                            <input asp-for="PorcentajeImpuesto" class="form-control" />
                            <span asp-validation-for="PorcentajeImpuesto" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="SubTotal" class="form-label"></label>
                            <input asp-for="SubTotal" class="form-control" />
                            <span asp-validation-for="SubTotal" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="MontoTotal" class="form-label"></label>
                            <input asp-for="MontoTotal" class="form-control" />
                            <span asp-validation-for="MontoTotal" class="text-danger"></span>
                        </div>
                    </div>
                </div>
               @await Html.PartialAsync("~/Views/Shared/_ButtonsForm.cshtml")
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
