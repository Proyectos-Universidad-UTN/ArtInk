<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ArtInk</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    @* CSS SITE *@
    <link rel="icon" href="~/img/logo.ico" type="image/x-icon" />
    <link rel="stylesheet" href="~/ArtInk.Site.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/artink.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/fondoArt.webp" class="navbar-logo" alt="Logo" />
                    <span class="ms-2">ArtInk Studio</span>
                </a>
            </div>
        </nav>
    </header>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <div class="container full-page">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted fixed-bottom">
        <div class="container-fluid">
            <div class="container text-center">
                &copy; 2024 - ArtInk.Site - <a href="#">Privacy</a>
            </div>
        </div>
        <div class="bubbles">
            <span class="bubble"></span>
            <span class="bubble"></span>
            <span class="bubble"></span>
            <span class="bubble"></span>
            <span class="bubble"></span>
            <span class="bubble"></span>
            <span class="bubble"></span>
            <span class="bubble"></span>
            <span class="bubble"></span>
            <span class="bubble"></span>
        </div>
    </footer>
</body>

</html>