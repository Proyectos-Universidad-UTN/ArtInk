@model ArtInk.Site.ViewModels.Request.ReservaRequestDto

<ul class="list-group px-3 pb-3">
    @{
        foreach(var it in Model.Servicios.Select((x, i) => new { Value = x, Index = i }))
        {
            <li class="list-group-item">
                <div class="row">
                    <input hidden name="Servicios[@it.Index].Id" value="@it.Value.Id" />
                    <div class="col-sm-12 col-md-6">
                        <label for="" class="form-label">@it.Value.Nombre</label>
                    </div>
                    <div class="col-sm-10 col-md-5">
                        <input asp-for="@Model.Servicios[@it.Index].TarifaFormateada" id="Tarifa-@it.Index" disabled class="form-control text-end">
                    </div>
                    <div class="col-sm-2 col-md-1">
                        <button type="button" class="btn btn-danger btn-sm flex-fill m-0" data-servicio="@it.Value.Id"
                            onclick="eliminarServicio(this)">
                            <span class="material-symbols-outlined">
                                close
                            </span>
                        </button>
                    </div>
                </div>
            </li>
        }
    }
</ul>