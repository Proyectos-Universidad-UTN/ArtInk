@model ArtInk.Site.ViewModels.Response.ReservaResponseDto

@{
    ViewData["Title"] = "Detalle Reserva";
}

<div class="container fade-in mt-5 mb-5 detalle-artink small-content">
    <table class="table table-striped table-dark table-hover">
        <thead>
            <tr>
                <th colspan="2" class="bg-primary text-white text-center">Detalle Reserva</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <td>@Html.DisplayFor(model => model.Id)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Estado)</th>
                <td>@Html.DisplayFor(model => model.Estado)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Activo)</th>
                <td>@Html.DisplayFor(model => model.Activo)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.IdUsuarioSucursal)</th>
                <td>@Html.DisplayFor(model => model.IdUsuarioSucursal)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.IdSucursal)</th>
                <td>@Html.DisplayFor(model => model.IdSucursal)</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary btn-sm flex-fill mx-1">Editar</a>
        <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm flex-fill mx-1">Regresar</a>
    </div>
</div>
