@model ArtInk.Site.ViewModels.Response.ProductoResponseDto

@{
    ViewData["Title"] = "Detalle Producto";
}

<div class="container fade-in mt-5 mb-5 detalle-artink small-content">
    <table class="table table-striped table-dark table-hover">
        <thead>
            <tr>
                <th colspan="2" class="bg-primary text-white text-center">Detalle Producto</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <td>@Html.DisplayFor(model => model.Id)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <td>@Html.DisplayFor(model => model.Nombre)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                <td>@Html.DisplayFor(model => model.Descripcion)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Marca)</th>
                <td>@Html.DisplayFor(model => model.Marca)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.IdCategoria)</th>
                <td>@Html.DisplayFor(model => model.Categoria.Nombre)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Costo)</th>
                <td>@Html.DisplayFor(model => model.Costo)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Sku)</th>
                <td>@Html.DisplayFor(model => model.Sku)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Cantidad)</th>
                <td>@Html.DisplayFor(model => model.Cantidad)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.IdUnidadMedida)</th>
                <td>@Html.DisplayFor(model => model.UnidadMedida.Nombre)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Activo)</th>
                <td>@Html.DisplayFor(model => model.Activo)</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary btn-sm flex-fill mx-1">Editar</a>
        <a href="@Url.Action("Index")" class="btn btn-secondary btn-sm flex-fill mx-1">Regresar</a>
    </div>
</div>       
