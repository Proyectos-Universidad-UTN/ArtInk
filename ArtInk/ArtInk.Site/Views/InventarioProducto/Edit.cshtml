@model ArtInk.Site.ViewModels.Request.InventarioProductoRequestDto

@{
ViewData["Title"] = "Editar inventario producto";
}

<div class="container mt-5">
    <div class="card mx-auto disable-hover" style="max-width: 800px;">
        <div class="card-header bg-primary text-white">
            <h4>Formulario de Inventario producto: @Model.Id</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div hidden>
                    <input asp-for="Id">
                    <input asp-for="IdInventario">
                    <input asp-for="Disponible">
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-sm-12 col-md-12">
                        <div class="form-group mb-3">
                            <label asp-for="IdProducto" class="form-label"></label>
                            <select asp-for="IdProducto" class="form-select" disabled asp-items="@(new SelectList(Model.Productos,"Id","Nombre"))"></select>
                            <span asp-validation-for="IdProducto" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12 col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="MinimaFormateada" class="form-label"></label>
                            <input asp-for="MinimaFormateada" placeholder="#,##0.00" class="form-control"
                                data-mask="#,##0.00" data-mask-reverse="true" />
                            <span asp-validation-for="MinimaFormateada" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="MaximaFormateada" class="form-label"></label>
                            <input asp-for="MaximaFormateada" placeholder="#,##0.00" class="form-control"
                                data-mask="#,##0.00" data-mask-reverse="true" />
                            <span asp-validation-for="MaximaFormateada" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                @await Html.PartialAsync("~/Views/Shared/_ButtonsForm.cshtml")
            </form>
        </div>
    </div>
</div>

@section Scripts {
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}