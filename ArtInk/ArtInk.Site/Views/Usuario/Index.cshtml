@model IEnumerable<ArtInk.Site.ViewModels.Response.UsuarioResponseDTO>

@{
    ViewData["Title"] = "Usuario";
}

<h1>Usuarios</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Crear Nuevo</a>
</p>

<table class="table table-striped table-dark table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Cedula)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Apellidos)</th>
            <th>@Html.DisplayNameFor(model => model.Telefono)</th>
            <th>@Html.DisplayNameFor(model => model.CorreoElectronico)</th>
            <th>@Html.DisplayNameFor(model => model.IdDistrito)</th>
            <th>@Html.DisplayNameFor(model => model.DireccionExacta)</th>
            <th>@Html.DisplayNameFor(model => model.Contrasenna)</th>
            <th>@Html.DisplayNameFor(model => model.IdGenero)</th>
            <th>@Html.DisplayNameFor(model => model.Activo)</th>
            <th>@Html.DisplayNameFor(model => model.UrlFoto)</th>
            <th>@Html.DisplayNameFor(model => model.Rol)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Cedula)</td>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Apellidos)</td>
                <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                <td>@Html.DisplayFor(modelItem => item.CorreoElectronico)</td>
                <td>@Html.DisplayFor(modelItem => item.IdDistrito)</td>
                <td>@Html.DisplayFor(modelItem => item.DireccionExacta)</td>
                <td>@Html.DisplayFor(modelItem => item.Contrasenna)</td>
                <td>@Html.DisplayFor(modelItem => item.IdGenero)</td>
                <td>@Html.DisplayFor(modelItem => item.Activo)</td>
                <td>@Html.DisplayFor(modelItem => item.UrlFoto)</td>
                <td>@Html.DisplayFor(modelItem => item.Rol.Descripcion)</td>
                <td>
                    <div class="btn-group" role="group">
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                        @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-secondary btn-sm" })
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
